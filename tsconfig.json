{
  "compilerOptions": {
    /* Project Configuration */
    "incremental": true,                                /* Enable incremental compilation for faster builds */
    "composite": false,                                 /* Required for project references (set to false for simplicity) */

    /* Language & Environment */
    "target": "ES2020",                                 /* Use a modern ES version for better performance */
    "module": "CommonJS",                               /* Keep CommonJS for Node.js compatibility */
    "lib": ["ESNext"],                                  /* Use latest ES features */
    "strict": true,                                     /* Enable all strict type checking */
    "esModuleInterop": true,                            /* Improve interoperability with CommonJS modules */
    "forceConsistentCasingInFileNames": true,           /* Enforce consistent import casing */
    "skipLibCheck": true,                               /* Skip checking declaration files for performance */

    /* Path & Module Resolution */
    "moduleResolution": "Node",                         /* Resolve modules in a Node.js-friendly way */
    "baseUrl": "./",                                    /* Allow absolute imports from project root */
    "paths": {                                          /* Map custom module paths */
      "@src/*": ["src/*"],
      "@db/*": ["src/db/*"],
      "@workers/*": ["src/workers/*"]
    },
    "resolveJsonModule": true,                          /* Allow importing JSON files */
    "rootDir": "./src",                                 /* Set the root directory for source files */
    "outDir": "./dist",                                 /* Set the output directory for compiled files */

    /* JavaScript Support */
    "allowJs": true,                                    /* Allow JavaScript files to be part of the project */
    "checkJs": false,                                   /* Do not type-check JS files (optional) */

    /* Debugging & Development */
    "sourceMap": true,                                  /* Generate source maps for debugging */
    "inlineSources": true,                              /* Include original source code in maps */
    "removeComments": false,                            /* Keep comments in compiled files */

    /* Type Checking */
    "noImplicitAny": true,                              /* Prevent implicit 'any' types */
    "strictNullChecks": true,                           /* Enforce strict null checks */
    "strictPropertyInitialization": true,               /* Ensure class properties are initialized */
    "noUnusedLocals": true,                             /* Warn about unused local variables */
    "noUnusedParameters": true,                         /* Warn about unused function parameters */
    "noImplicitReturns": true,                          /* Ensure functions explicitly return values */
    "noFallthroughCasesInSwitch": true,                 /* Prevent unintentional fallthrough in switch cases */

    /* Output & Build */
    "declaration": false,                               /* Do not generate .d.ts files */
    "emitDeclarationOnly": false,                       /* Ensure JS files are also generated */
    "noEmitOnError": true                               /* Prevent emitting files if there are type errors */
  },
  "include": ["src"],                                   /* Only compile files in the 'src' directory */
  "exclude": ["node_modules", "dist"]                   /* Exclude unnecessary directories */
}
